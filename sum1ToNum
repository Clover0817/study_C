#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>

int total(int n)
{
	int i;
	int sum = 0;

	for (i = 1; i <= n; i++)
	{
		sum += i;
	}

	return sum;
}

int main(void)
{
	int n;
	int result;

	while (1)
	{
		printf(“Input a number:  “);
		scanf(“%d”, &n);
	}
	
	if ( n == -1)
  	  	break;

	result = total(n);
	printf(“1부터 %d까지의 합은 %d\n”, n, result);

}

